{
  "dashboard": {
    "id": null,
    "title": "Haircut Reservation System - Overview",
    "tags": ["haircut", "reservation", "overview"],
    "style": "dark",
    "timezone": "browser",
    "refresh": "30s",
    "schemaVersion": 16,
    "version": 1,
    "panels": [
      {
        "id": 1,
        "title": "System Health Overview",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=\"frontend\"}",
            "legendFormat": "Frontend Status"
          },
          {
            "expr": "up{job=\"backend\"}",
            "legendFormat": "Backend Status"
          },
          {
            "expr": "up{job=\"postgres\"}",
            "legendFormat": "Database Status"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "green", "value": 1}
              ]
            },
            "mappings": [
              {"options": {"0": {"text": "DOWN"}}, "type": "value"},
              {"options": {"1": {"text": "UP"}}, "type": "value"}
            ]
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Request Rate (req/min)",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_requests_total{job=\"backend\"}[5m]) * 60",
            "legendFormat": "Backend Requests"
          },
          {
            "expr": "rate(http_requests_total{job=\"frontend\"}[5m]) * 60",
            "legendFormat": "Frontend Requests"
          }
        ],
        "yAxes": [
          {"label": "Requests/min", "min": 0},
          {"show": false}
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      },
      {
        "id": 3,
        "title": "Response Times",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket{job=\"backend\"}[5m]))",
            "legendFormat": "Backend 95th percentile"
          },
          {
            "expr": "histogram_quantile(0.50, rate(http_request_duration_seconds_bucket{job=\"backend\"}[5m]))",
            "legendFormat": "Backend 50th percentile"
          }
        ],
        "yAxes": [
          {"label": "Seconds", "min": 0},
          {"show": false}
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
      },
      {
        "id": 4,
        "title": "Error Rates",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_requests_total{job=\"backend\", code=~\"4..|5..\"}[5m])",
            "legendFormat": "Backend Errors"
          },
          {
            "expr": "rate(http_requests_total{job=\"frontend\", code=~\"4..|5..\"}[5m])",
            "legendFormat": "Frontend Errors"
          }
        ],
        "yAxes": [
          {"label": "Errors/sec", "min": 0},
          {"show": false}
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8}
      },
      {
        "id": 5,
        "title": "Database Connections",
        "type": "graph",
        "targets": [
          {
            "expr": "pg_stat_database_numbackends{datname=\"haircut_reservation\"}",
            "legendFormat": "Active Connections"
          },
          {
            "expr": "pg_settings_max_connections",
            "legendFormat": "Max Connections"
          }
        ],
        "yAxes": [
          {"label": "Connections", "min": 0},
          {"show": false}
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16}
      },
      {
        "id": 6,
        "title": "Memory Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "process_resident_memory_bytes{job=\"backend\"} / 1024 / 1024",
            "legendFormat": "Backend Memory (MB)"
          },
          {
            "expr": "process_resident_memory_bytes{job=\"frontend\"} / 1024 / 1024",
            "legendFormat": "Frontend Memory (MB)"
          }
        ],
        "yAxes": [
          {"label": "Memory (MB)", "min": 0},
          {"show": false}
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16}
      },
      {
        "id": 7,
        "title": "Firebase Auth Events",
        "type": "graph",
        "targets": [
          {
            "expr": "firebase_auth_events_total{event_type=\"sign_in\"}",
            "legendFormat": "Sign Ins"
          },
          {
            "expr": "firebase_auth_events_total{event_type=\"sign_up\"}",
            "legendFormat": "Sign Ups"
          },
          {
            "expr": "firebase_auth_events_total{event_type=\"sign_out\"}",
            "legendFormat": "Sign Outs"
          }
        ],
        "yAxes": [
          {"label": "Events", "min": 0},
          {"show": false}
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24}
      },
      {
        "id": 8,
        "title": "Reservation Metrics",
        "type": "graph",
        "targets": [
          {
            "expr": "reservation_created_total",
            "legendFormat": "Reservations Created"
          },
          {
            "expr": "reservation_cancelled_total",
            "legendFormat": "Reservations Cancelled"
          },
          {
            "expr": "reservation_completed_total",
            "legendFormat": "Reservations Completed"
          }
        ],
        "yAxes": [
          {"label": "Count", "min": 0},
          {"show": false}
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 24}
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": [
        "5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"
      ]
    }
  }
}