# Environment Variables Example
# Copy this file to .env and fill in your values

# Development Environment
NODE_ENV=development

# Firebase Configuration (Development)
FIREBASE_PROJECT_ID=haircut-reservation-dev
FIREBASE_API_KEY=your-api-key-here
FIREBASE_AUTH_DOMAIN=haircut-reservation-dev.firebaseapp.com
FIREBASE_STORAGE_BUCKET=haircut-reservation-dev.appspot.com
FIREBASE_MESSAGING_SENDER_ID=123456789
FIREBASE_APP_ID=1:123456789:web:abcdef123456789

# Nuxt Public Firebase Configuration
NUXT_PUBLIC_FIREBASE_PROJECT_ID=haircut-reservation-dev
NUXT_PUBLIC_FIREBASE_API_KEY=your-api-key-here
NUXT_PUBLIC_FIREBASE_AUTH_DOMAIN=haircut-reservation-dev.firebaseapp.com
NUXT_PUBLIC_FIREBASE_STORAGE_BUCKET=haircut-reservation-dev.appspot.com
NUXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789
NUXT_PUBLIC_FIREBASE_APP_ID=1:123456789:web:abcdef123456789

# Firebase Service Account (Base64 encoded JSON)
FIREBASE_SERVICE_ACCOUNT=your-base64-encoded-service-account-json

# Database Configuration
DATABASE_URL=postgresql://haircut_user:dev_password_2024@localhost:5432/haircut_reservation
POSTGRES_DB=haircut_reservation
POSTGRES_USER=haircut_user
POSTGRES_PASSWORD=dev_password_2024

# Redis Configuration
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# API Configuration
API_URL=http://localhost:3001
BASE_URL=http://localhost:3000

# Security
ENCRYPTION_KEY=your-32-character-encryption-key

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf

# Rate Limiting
RATE_LIMIT_WINDOW=15  # minutes
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring and Analytics
SENTRY_DSN=your-sentry-dsn-here
GOOGLE_ANALYTICS_ID=your-ga-id-here

# Third-party Integrations
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Development Tools
LOG_LEVEL=debug
ENABLE_CORS=true
TRUST_PROXY=false

# ================================
# STAGING ENVIRONMENT VARIABLES
# ================================

# Firebase Configuration (Staging)
FIREBASE_PROJECT_ID_STAGING=haircut-reservation-staging
FIREBASE_API_KEY_STAGING=your-staging-api-key
FIREBASE_AUTH_DOMAIN_STAGING=haircut-reservation-staging.firebaseapp.com
FIREBASE_STORAGE_BUCKET_STAGING=haircut-reservation-staging.appspot.com
FIREBASE_MESSAGING_SENDER_ID_STAGING=123456789
FIREBASE_APP_ID_STAGING=1:123456789:web:staging123456789
FIREBASE_SERVICE_ACCOUNT_STAGING=your-staging-service-account

# Database (Staging)
DATABASE_URL_STAGING=postgresql://staging_user:staging_password@postgres-staging:5432/haircut_reservation_staging
POSTGRES_DB_STAGING=haircut_reservation_staging
POSTGRES_USER_STAGING=staging_user
POSTGRES_PASSWORD_STAGING=staging_password_2024

# Redis (Staging)
REDIS_URL_STAGING=redis://redis-staging:6379

# JWT (Staging)
JWT_SECRET_STAGING=your-staging-jwt-secret

# Email (Staging)
EMAIL_HOST_STAGING=smtp.gmail.com
EMAIL_USER_STAGING=staging@haircutreservation.app
EMAIL_PASS_STAGING=your-staging-email-password

# Monitoring (Staging)
GRAFANA_ADMIN_PASSWORD_STAGING=your-grafana-staging-password
SENTRY_DSN_STAGING=your-staging-sentry-dsn

# ================================
# PRODUCTION ENVIRONMENT VARIABLES
# ================================

# Firebase Configuration (Production)
FIREBASE_PROJECT_ID_PROD=haircut-reservation-prod
FIREBASE_API_KEY_PROD=your-production-api-key
FIREBASE_AUTH_DOMAIN_PROD=haircut-reservation.app
FIREBASE_STORAGE_BUCKET_PROD=haircut-reservation-prod.appspot.com
FIREBASE_MESSAGING_SENDER_ID_PROD=123456789
FIREBASE_APP_ID_PROD=1:123456789:web:prod123456789
FIREBASE_SERVICE_ACCOUNT_PROD=your-production-service-account

# Database (Production)
DATABASE_URL_PROD=postgresql://prod_user:secure_prod_password@postgres-primary:5432/haircut_reservation_prod
POSTGRES_DB_PROD=haircut_reservation_prod
POSTGRES_USER_PROD=prod_user
POSTGRES_PASSWORD_PROD=secure_production_password_2024
POSTGRES_REPLICATION_USER=replication_user
POSTGRES_REPLICATION_PASSWORD=replication_password_2024

# Redis (Production)
REDIS_URL_PROD=redis://redis-primary:6379

# JWT (Production)
JWT_SECRET_PROD=your-super-secure-production-jwt-secret

# Email (Production)
EMAIL_HOST_PROD=smtp.gmail.com
EMAIL_USER_PROD=noreply@haircutreservation.app
EMAIL_PASS_PROD=your-production-email-password

# Monitoring (Production)
GRAFANA_ADMIN_PASSWORD_PROD=your-secure-grafana-password
GRAFANA_SECRET_KEY_PROD=your-grafana-secret-key
GRAFANA_DB_NAME=grafana
GRAFANA_DB_USER=grafana_user
GRAFANA_DB_PASSWORD=grafana_password

# Backup Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
BACKUP_S3_BUCKET=haircut-reservation-backups

# SSL/TLS
SSL_CERT_PATH=/etc/ssl/certs/fullchain.pem
SSL_KEY_PATH=/etc/ssl/private/privkey.pem

# Production Security
SENTRY_DSN_PROD=your-production-sentry-dsn
SECURITY_HEADERS=true
FORCE_HTTPS=true