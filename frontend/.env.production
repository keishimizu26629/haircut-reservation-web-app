# 本番環境用設定（Firebase Cloud Production Environment）
# このファイルは本番環境デプロイ時に使用

# 環境識別
NODE_ENV=production
NUXT_ENV=production
FIREBASE_ENV=production

# Firebase本番環境設定
# 注意: 実際の値はCI/CDパイプラインで設定されます
FIREBASE_PROJECT_ID=${FIREBASE_PROD_PROJECT_ID}
FIREBASE_API_KEY=${FIREBASE_PROD_API_KEY}
FIREBASE_AUTH_DOMAIN=${FIREBASE_PROD_AUTH_DOMAIN}
FIREBASE_STORAGE_BUCKET=${FIREBASE_PROD_STORAGE_BUCKET}
FIREBASE_MESSAGING_SENDER_ID=${FIREBASE_PROD_MESSAGING_SENDER_ID}
FIREBASE_APP_ID=${FIREBASE_PROD_APP_ID}

# API設定
API_URL=${API_URL_PROD}

# マルチテナント設定（本番環境用）
DEFAULT_TENANT_ID=prod-salon
ENABLE_MULTI_TENANT=true

# 本番環境機能フラグ
ENABLE_DEBUG_MODE=false
ENABLE_DEVTOOLS=false
ENABLE_MOCK_DATA=false
ENABLE_ANALYTICS=true

# 監視・ログ設定
ENABLE_ERROR_REPORTING=true
ENABLE_PERFORMANCE_MONITORING=true
LOG_LEVEL=error

# セキュリティ設定（本番環境）
ENABLE_CSP=true
ENABLE_HTTPS_REDIRECT=true
ENABLE_HSTS=true

# パフォーマンス設定
ENABLE_COMPRESSION=true
ENABLE_CACHING=true
CDN_URL=${CDN_URL}

# バックアップ・復旧設定
BACKUP_ENABLED=true
DISASTER_RECOVERY_ENABLED=true