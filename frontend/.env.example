# 環境変数テンプレートファイル
# このファイルをコピーして適切な環境変数ファイルを作成してください

# 環境識別（local/development/production）
NODE_ENV=development
NUXT_ENV=local
FIREBASE_ENV=local

# Firebase設定
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_API_KEY=your-api-key
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_STORAGE_BUCKET=your-project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=123456789
FIREBASE_APP_ID=1:123456789:web:abcdef123

# Firebase Emulator設定（ローカル開発時のみ）
FIRESTORE_EMULATOR_HOST=localhost:8080
FIREBASE_AUTH_EMULATOR_HOST=localhost:9099
FIREBASE_DATABASE_EMULATOR_HOST=localhost:9000
FIREBASE_STORAGE_EMULATOR_HOST=localhost:9199
FIREBASE_FUNCTIONS_EMULATOR_HOST=localhost:5001

# API設定
API_URL=http://localhost:3001

# マルチテナント設定
DEFAULT_TENANT_ID=default-salon
ENABLE_MULTI_TENANT=true

# 機能フラグ
ENABLE_DEBUG_MODE=true
ENABLE_DEVTOOLS=true
ENABLE_MOCK_DATA=true
ENABLE_ANALYTICS=false

# 監視・ログ設定
ENABLE_ERROR_REPORTING=true
ENABLE_PERFORMANCE_MONITORING=true
LOG_LEVEL=debug

# セキュリティ設定
ENABLE_CSP=true
ENABLE_HTTPS_REDIRECT=false

# デバッグ用
DEBUG=firebase:*