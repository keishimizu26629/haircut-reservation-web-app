# Environment Variables Template
# Copy this file to .env.local, .env.dev, or .env.prod and configure accordingly

# ==========================================
# FIREBASE CONFIGURATION
# ==========================================

# Firebase Development Environment
FIREBASE_DEV_PROJECT_ID=your-dev-project-id
FIREBASE_DEV_API_KEY=your-dev-api-key
FIREBASE_DEV_AUTH_DOMAIN=your-dev-project.firebaseapp.com
FIREBASE_DEV_STORAGE_BUCKET=your-dev-project.appspot.com
FIREBASE_DEV_MESSAGING_SENDER_ID=123456789
FIREBASE_DEV_APP_ID=1:123456789:web:abcdef123456
FIREBASE_SERVICE_ACCOUNT_DEV=your-dev-service-account-json-base64

# Firebase Production Environment
FIREBASE_PROD_PROJECT_ID=your-prod-project-id
FIREBASE_PROD_API_KEY=your-prod-api-key
FIREBASE_PROD_AUTH_DOMAIN=your-prod-project.firebaseapp.com
FIREBASE_PROD_STORAGE_BUCKET=your-prod-project.appspot.com
FIREBASE_PROD_MESSAGING_SENDER_ID=987654321
FIREBASE_PROD_APP_ID=1:987654321:web:fedcba654321
FIREBASE_SERVICE_ACCOUNT_PROD=your-prod-service-account-json-base64

# ==========================================
# DATABASE CONFIGURATION
# ==========================================

# Development Database
DATABASE_URL_DEV=postgresql://dev_user:dev_password@postgres:5432/haircut_reservation_dev
POSTGRES_DB_DEV=haircut_reservation_dev
POSTGRES_USER_DEV=dev_user
POSTGRES_PASSWORD_DEV=dev_password_change_me

# Production Database
DATABASE_URL_PROD=postgresql://prod_user:secure_prod_password@postgres:5432/haircut_reservation_prod
POSTGRES_DB_PROD=haircut_reservation_prod
POSTGRES_USER_PROD=prod_user
POSTGRES_PASSWORD_PROD=secure_prod_password_change_me

# ==========================================
# REDIS CONFIGURATION
# ==========================================

REDIS_URL_DEV=redis://redis:6379
REDIS_URL_PROD=redis://redis:6379

# ==========================================
# APPLICATION SECRETS
# ==========================================

# JWT Secrets (CHANGE THESE IN PRODUCTION!)
JWT_SECRET_DEV=dev-jwt-secret-key-change-in-production
JWT_SECRET_PROD=super-secure-prod-jwt-secret-change-me

# ==========================================
# EMAIL CONFIGURATION
# ==========================================

# Development Email Settings
EMAIL_HOST_DEV=smtp.mailtrap.io
EMAIL_USER_DEV=your-mailtrap-username
EMAIL_PASS_DEV=your-mailtrap-password

# Production Email Settings
EMAIL_HOST_PROD=smtp.gmail.com
EMAIL_USER_PROD=your-gmail@gmail.com
EMAIL_PASS_PROD=your-app-password

# ==========================================
# MONITORING CONFIGURATION
# ==========================================

# Grafana Settings
GRAFANA_ADMIN_PASSWORD_DEV=admin123
GRAFANA_ADMIN_PASSWORD_PROD=secure_admin_password_change_me
GRAFANA_ADMIN_USER_PROD=admin

# ==========================================
# BUILD CONFIGURATION
# ==========================================

BUILD_TARGET=development  # or production
