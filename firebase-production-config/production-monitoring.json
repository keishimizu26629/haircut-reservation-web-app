{
  "productionMonitoring": {
    "projectId": "haircut-reservation-prod",
    "environment": "production",
    "setupDate": "2025-07-30",
    "monitoring": {
      "firebase": {
        "budgetAlerts": {
          "enabled": true,
          "budgetAmount": 100,
          "currency": "USD",
          "thresholds": [0.5, 0.8, 0.9, 1.0],
          "alertEmails": [
            "admin@your-domain.com",
            "tech-lead@your-domain.com"
          ],
          "slackWebhook": "https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK"
        },
        "quotaMonitoring": {
          "firestore": {
            "reads": {
              "dailyLimit": 50000,
              "alertThreshold": 0.8
            },
            "writes": {
              "dailyLimit": 20000,
              "alertThreshold": 0.8
            },
            "deletes": {
              "dailyLimit": 20000,
              "alertThreshold": 0.8
            }
          },
          "storage": {
            "dailyUpload": {
              "limit": "5GB",
              "alertThreshold": 0.8
            },
            "totalStorage": {
              "limit": "50GB",
              "alertThreshold": 0.9
            }
          },
          "functions": {
            "invocations": {
              "dailyLimit": 125000,
              "alertThreshold": 0.8
            },
            "computeTime": {
              "dailyLimit": "40000 GHz-seconds",
              "alertThreshold": 0.8
            }
          },
          "hosting": {
            "bandwidth": {
              "monthlyLimit": "100GB",
              "alertThreshold": 0.8
            }
          }
        }
      },
      "performance": {
        "thresholds": {
          "pageLoadTime": {
            "warning": 3000,
            "critical": 5000
          },
          "apiResponseTime": {
            "warning": 1000,
            "critical": 3000
          },
          "errorRate": {
            "warning": 0.01,
            "critical": 0.05
          },
          "memoryUsage": {
            "warning": 80,
            "critical": 95
          }
        },
        "metrics": [
          "core_web_vitals",
          "page_load_time",
          "time_to_interactive",
          "first_contentful_paint",
          "largest_contentful_paint",
          "cumulative_layout_shift"
        ]
      },
      "security": {
        "alerts": [
          "suspicious_login_attempts",
          "failed_authentication_threshold",
          "unusual_api_usage_patterns",
          "firestore_rule_violations",
          "storage_access_violations"
        ],
        "thresholds": {
          "failedLoginAttempts": {
            "perMinute": 10,
            "perHour": 100
          },
          "apiCallsPerUser": {
            "perMinute": 60,
            "perHour": 1000
          }
        }
      },
      "availability": {
        "uptimeMonitoring": {
          "enabled": true,
          "checkInterval": 60,
          "endpoints": [
            "https://haircut-reservation-prod.web.app/health",
            "https://haircut-reservation-prod.web.app/api/health",
            "https://us-central1-haircut-reservation-prod.cloudfunctions.net/api/health"
          ],
          "alertThreshold": 0.99
        },
        "healthChecks": [
          "database_connectivity",
          "authentication_service",
          "storage_availability",
          "functions_execution"
        ]
      }
    },
    "backupStrategy": {
      "firestore": {
        "schedule": "0 2 * * *",
        "retention": {
          "daily": 7,
          "weekly": 4,
          "monthly": 12
        },
        "exportBucket": "haircut-reservation-prod-backups",
        "encryption": "google_managed",
        "collectionIds": [
          "tenants",
          "users",
          "customers",
          "staff",
          "services",
          "reservations",
          "settings"
        ]
      },
      "storage": {
        "enabled": true,
        "method": "cloud_storage_transfer",
        "destinationBucket": "haircut-reservation-prod-storage-backup",
        "schedule": "0 3 * * 0",
        "retention": 90
      },
      "functions": {
        "sourceCodeBackup": {
          "enabled": true,
          "repository": "github",
          "schedule": "after_deployment"
        }
      }
    },
    "securityConfiguration": {
      "authentication": {
        "enforceEmailVerification": true,
        "passwordPolicy": {
          "minLength": 8,
          "requireUppercase": true,
          "requireLowercase": true,
          "requireNumbers": true,
          "requireSymbols": false
        },
        "accountLockout": {
          "enabled": true,
          "maxAttempts": 5,
          "lockoutDuration": 600
        },
        "mfa": {
          "available": true,
          "enforced": false,
          "methods": ["sms", "totp"]
        }
      },
      "firestore": {
        "rulesVersion": "2",
        "strictMode": true,
        "auditLogging": true,
        "encryptionAtRest": true
      },
      "storage": {
        "corsPolicy": {
          "allowedOrigins": [
            "https://haircut-reservation-prod.web.app",
            "https://your-custom-domain.com"
          ],
          "allowedMethods": ["GET", "POST", "PUT", "DELETE"],
          "allowedHeaders": ["Content-Type", "Authorization"],
          "maxAge": 3600
        },
        "publicAccess": {
          "prevention": true,
          "uniformBucketLevelAccess": true
        }
      },
      "functions": {
        "runtime": "nodejs18",
        "region": "asia-northeast1",
        "environmentVariables": {
          "secureMode": true,
          "encryptionRequired": true
        },
        "vpcConnector": {
          "enabled": false,
          "name": ""
        }
      },
      "networking": {
        "ssl": {
          "enforced": true,
          "minVersion": "TLSv1.2"
        },
        "headers": {
          "hsts": "max-age=31536000; includeSubDomains; preload",
          "csp": "default-src 'self'; script-src 'self' 'unsafe-inline' https://www.gstatic.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https:; connect-src 'self' https:",
          "xContentTypeOptions": "nosniff",
          "xFrameOptions": "DENY",
          "xXSSProtection": "1; mode=block",
          "referrerPolicy": "strict-origin-when-cross-origin"
        }
      }
    },
    "incidentResponse": {
      "escalationMatrix": [
        {
          "level": "L1_MONITOR",
          "contacts": ["monitoring-team@your-domain.com"],
          "responseTime": "15 minutes"
        },
        {
          "level": "L2_ENGINEER",
          "contacts": ["engineering-oncall@your-domain.com"],
          "responseTime": "30 minutes"
        },
        {
          "level": "L3_SENIOR",
          "contacts": ["senior-engineer@your-domain.com"],
          "responseTime": "1 hour"
        },
        {
          "level": "L4_MANAGEMENT",
          "contacts": ["tech-lead@your-domain.com", "cto@your-domain.com"],
          "responseTime": "2 hours"
        }
      ],
      "procedures": {
        "dataBreachResponse": {
          "immediate": [
            "Isolate affected systems",
            "Notify security team",
            "Document incident details"
          ],
          "within24Hours": [
            "Assess impact scope",
            "Notify affected users",
            "Report to authorities if required"
          ]
        },
        "serviceOutage": {
          "immediate": [
            "Activate incident response team",
            "Switch to maintenance mode",
            "Investigate root cause"
          ],
          "restoration": [
            "Implement fix",
            "Test in staging",
            "Deploy to production",
            "Monitor stability"
          ]
        }
      }
    },
    "complianceRequirements": {
      "dataProtection": {
        "gdpr": {
          "applicable": true,
          "dataProcessingBasis": "contract",
          "retentionPeriod": "7 years",
          "rightToErasure": true
        },
        "localPrivacyLaws": {
          "applicable": true,
          "jurisdiction": "Japan",
          "requirements": [
            "Personal Information Protection Act compliance",
            "Data localization requirements",
            "Consent management"
          ]
        }
      },
      "auditRequirements": {
        "frequency": "quarterly",
        "scope": [
          "security_controls",
          "data_handling",
          "access_management",
          "backup_recovery"
        ],
        "documentation": [
          "security_policies",
          "incident_reports",
          "access_logs",
          "change_management"
        ]
      }
    }
  }
}